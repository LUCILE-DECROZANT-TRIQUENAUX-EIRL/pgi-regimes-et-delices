{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        {% if errors is defined and errors is not null %}
            <div class="alert alert-danger">
                {{ errors.messageKey }}
            </div>
        {% endif %}
        <div class="row spacer-default">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <p class="text-center lead">
                    Bienvenue sur le Progiciel de Gestion Intégré de Régimes&nbsp;&&nbsp;Délices
                </p>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row spacer-default">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <p class="text-center lead">
                    Pour accéder au lociciel, identifiez-vous
                </p>
            </div>
            <div class="col-md-3"></div>
        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Nom d'utilisateur" value="{% if username is defined %} {{ username }} {% endif %}">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe">
                    </div>
                    <button type="submit" class="btn btn-primary center-block">Connexion</button>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
        
        
    </div>
{% endblock %}

{% block stylesheets %}{% endblock %}
